{
  "extends": "@config/tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "isCustomElement": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["src/*"]
    },
    "lib": ["dom", "esnext"],
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
